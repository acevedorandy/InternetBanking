@model IEnumerable<InternetBanking.Persistance.Models.dbo.TransaccionesModel>

@{
    ViewData["Title"] = "Transferencias por cuenta";
}

@* Incluye Bootstrap CSS y los iconos de Font Awesome *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

@* Estilos personalizados *@
<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 40px;
    }

    .table thead {
        background-color: #007bff;
        color: white;
    }

    .table tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .btn-primary-custom {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
    }

    .btn-primary-custom:hover {
        background-color: #0056b3;
    }

    .btn-back {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .btn-back:hover {
        background-color: #218838;
    }

    h1 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .form-label {
        font-weight: bold;
    }

    .table th, .table td {
        text-align: center;
    }

    .filter-form {
        margin-bottom: 20px;
    }

    .icon-btn {
        padding: 5px;
        border-radius: 50%;
        color: white;
        background-color: #007bff;
        font-size: 18px;
    }

    .icon-btn:hover {
        background-color: #0056b3;
    }
</style>

<div class="container">
    <h1 class="text-center">@ViewData["Title"]</h1>

@*     <form method="get" action="@Url.Action("ByFechas", "Transacciones")" class="filter-form">
        <div class="mb-3">
            <label for="fecha" class="form-label">Filtrar por fecha:</label>
            <input type="date" id="fecha" name="fecha" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        </div>
        <button type="submit" class="btn-primary-custom">
            <i class="fas fa-filter"></i> Filtrar
        </button>
    </form> *@

    @* Botón "Volver atrás" siempre visible *@
    <button class="btn-back" onclick="history.back()">
        <i class="fas fa-arrow-left"></i> Volver atrás
    </button>

    @if (Model == null || !Model.Any())
    {
        <h2 class="text-center text-muted">No hay transacciones registradas al momento.</h2>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NumeroCuenta)</th>
                    <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                    <th>@Html.DisplayNameFor(model => model.Monto)</th>
                    <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                    <th>@Html.DisplayNameFor(model => model.Detalles)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NumeroCuenta)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                        <td>@Html.DisplayFor(modelItem => item.Detalles)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@* Incluir Bootstrap JS y Popper.js si es necesario *@
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
