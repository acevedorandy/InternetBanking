@model IEnumerable<InternetBanking.Persistance.Models.dbo.PrestamosModel>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>

    <!-- Enlace a Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Estilos adicionales */
        body {
            font-family: Arial, sans-serif;
            padding-top: 20px;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .table td {
            padding: 12px;
            font-size: 14px;
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            font-size: 14px;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .pagado-yes {
            color: green;
            font-weight: bold;
        }

        .pagado-no {
            color: red;
            font-weight: bold;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .no-data {
            text-align: center;
            font-size: 1.2em;
            color: #888;
        }

        .badge-success {
            background-color: #28a745;
        }

        .badge-danger {
            background-color: #dc3545;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Listado de Préstamos</h1>

        @if (Model == null || !Model.Any())
        {
            <div class="no-data">
                <h2>Usted no tiene ningún préstamo.</h2>
            </div>
        }
        else
        {
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NumeroPrestamo)</th>
                        <th>@Html.DisplayNameFor(model => model.Monto)</th>
                        <th>@Html.DisplayNameFor(model => model.SaldoDeuda)</th>
                        <th>Estado de Pago</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NumeroPrestamo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                            <td>@Html.DisplayFor(modelItem => item.SaldoDeuda)</td>
                            <td>
                                @if (item.Pagado)
                                {
                                    <span class="badge badge-success">Pagado</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Pendiente</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- Scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
</html>
