@model IEnumerable<InternetBanking.Persistance.Models.dbo.TarjetasCreditoModel>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>

    <!-- Enlace a Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            padding-top: 30px;
            background-color: #f8f9fa;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2em;
            font-weight: 600;
            color: #007bff;
        }

        .card {
            margin-bottom: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .card-body {
            padding: 25px;
        }

        .card-title {
            font-size: 1.4em;
            font-weight: bold;
            color: #333;
        }

        .card-text {
            font-size: 1.1em;
            color: #555;
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 14px;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .no-data {
            text-align: center;
            font-size: 1.2em;
            color: #888;
            margin-top: 30px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .badge {
            font-weight: bold;
            font-size: 1.1em;
            padding: 5px 10px;
            border-radius: 10px;
            background-color: #28a745;
            color: white;
        }

        .card-img-top {
            height: 180px;
            object-fit: cover;
            border-radius: 10px;
        }

        .d-flex {
            gap: 10px;
        }

        .col-md-4 {
            margin-bottom: 20px;
        }

        .card-footer {
            text-align: center;
            padding: 10px;
            background-color: #f8f9fa;
            border-top: 1px solid #ddd;
        }

    </style>
</head>
<body>

    <div class="container">
        <h1>Listado de Tarjetas de Crédito</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model == null || !Model.Any())
        {
            <div class="no-data">
                <h2>No hay tarjetas registradas.</h2>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card text-center">
                            <div class="card-header bg-primary text-white">
                                <i class="bi bi-credit-card fs-1"></i> <!-- Icono de tarjeta grande -->
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Tarjeta @Html.DisplayFor(modelItem => item.TipoTarjeta)</h5>
                                <p class="card-text">
                                    <strong>Número de Tarjeta:</strong> @Html.DisplayFor(modelItem => item.NumeroTarjeta) <br>
                                    <strong>Límite de Crédito:</strong> @Html.DisplayFor(modelItem => item.LimiteCredito) <br>
                                    <strong>Saldo Deuda:</strong> @Html.DisplayFor(modelItem => item.SaldoDeuda) <br>
                                    <strong>Saldo Disponible:</strong> @Html.DisplayFor(modelItem => item.SaldoDisponible) <br>
                                </p>
                                <a asp-action="Details" asp-route-id="@item.TarjetaID" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-gear"></i> Administrar tarjeta
                                </a>
                            </div>
                            <div class="card-footer">
                                <span class="badge">Estado: Activa</span>
                            </div>
                        </div>
                    </div>

                }
            </div>
        }
    </div>

    <!-- Scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
</html>
