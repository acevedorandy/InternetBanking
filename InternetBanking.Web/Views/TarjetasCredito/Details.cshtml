@model InternetBanking.Persistance.Models.dbo.TarjetasCreditoModel

@{
    ViewData["Title"] = "Detalles de Tarjeta";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Detalles de la Tarjeta</h1>

    <!-- Card para los detalles de la tarjeta -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm bg-light rounded">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <!-- Icono de tarjeta -->
                        <i class="bi bi-credit-card-fill" style="font-size: 3rem; color: #0d6efd;"></i>
                    </div>
                    <dl class="row">
                        <input type="hidden" asp-for="TarjetaID" />
                        <input type="hidden" asp-for="UsuarioID" />

                        <dt class="col-sm-4 fw-bold">Número de tarjeta:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NumeroTarjeta)</dd>

                        <dt class="col-sm-4 fw-bold">Límite de crédito:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LimiteCredito)</dd>

                        <dt class="col-sm-4 fw-bold">Saldo de deuda:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SaldoDeuda)</dd>

                        <dt class="col-sm-4 fw-bold">Saldo disponible:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SaldoDisponible)</dd>

                        <dt class="col-sm-4 fw-bold">Tipo de tarjeta:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TipoTarjeta)</dd>

                    </dl>
                    <div class="text-center mt-4">
                        <!-- Enlaces con botones estilizados -->
                        <a class="btn btn-info me-2" asp-action="Avance" asp-route-id="@Model.TarjetaID">
                            <i class="bi bi-arrow-up-circle"></i> Avance de efectivo
                        </a>
                        <a class="btn btn-warning me-2" asp-action="PagarTarjeta" asp-route-id="@Model.TarjetaID">
                            <i class="bi bi-credit-card"></i> Pagar tarjeta
                        </a>
                        <a class="btn btn-secondary" asp-action="Index">
                            <i class="bi bi-arrow-left-circle"></i> Volver atrás
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
