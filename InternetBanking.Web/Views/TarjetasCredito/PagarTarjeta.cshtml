@using InternetBanking.Application.Dtos.dbo.pagos.tarjeta
@model DetallesPagoTarjetaDto

@{
    ViewData["Title"] = "Pago de Tarjeta";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded" style="max-width: 500px; width: 100%; border: none;">
        <div class="text-center">
            <h2 class="fw-bold text-primary">
                <i class="bi bi-credit-card"></i> Pago de Tarjeta
            </h2>
            <p class="text-muted">Seleccione una cuenta y tarjeta para continuar</p>
        </div>

        <form asp-action="ProcesarPagarTarjeta" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Selección de Cuenta -->
            <div class="mb-3">
                <label asp-for="CuentaID" class="form-label fw-bold">Cuenta Origen</label>
                <select asp-for="CuentaID" asp-items="@ViewBag.Cuentas" class="form-select form-control-lg rounded-pill" required>
                    <option value="" selected disabled>Seleccione una cuenta</option>
                </select>
                <span asp-validation-for="CuentaID" class="text-danger"></span>
            </div>

            <!-- Selección de Tarjeta -->
            <div class="mb-3">
                <label asp-for="TarjetaID" class="form-label fw-bold">Tarjeta a pagar</label>
                <select asp-for="TarjetaID" asp-items="@ViewBag.Tarjetas" class="form-select form-control-lg rounded-pill" required>
                    <option value="" selected disabled>Seleccione una tarjeta</option>
                </select>
                <span asp-validation-for="TarjetaID" class="text-danger"></span>
            </div>

            <!-- Botón de Enviar -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">
                    <i class="bi bi-arrow-right-circle"></i> Continuar
                </button>
            </div>
        </form>
    </div>
</div>

