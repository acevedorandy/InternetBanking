@model InternetBanking.Application.Dtos.dbo.BeneficiariosDto

@{
    ViewData["Title"] = "Crear Beneficiario";
}

<div class="container d-flex flex-column justify-content-center align-items-center min-vh-100" style="overflow: hidden;">

    <h1 class="text-center text-uppercase text-primary mb-4">Crear Beneficiario</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row w-100 justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">

            <form asp-action="Create" class="shadow-lg p-4 rounded bg-light">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-4">
                    <label asp-for="CuentaBeneficiario" class="control-label fw-semibold text-muted">Número de Cuenta Beneficiario:</label>
                    <input asp-for="CuentaBeneficiario" class="form-control form-control-lg" />
                    <span asp-validation-for="CuentaBeneficiario" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Alias" class="control-label fw-semibold text-muted">Alias:</label>
                    <input asp-for="Alias" class="form-control form-control-lg" />
                    <span asp-validation-for="Alias" class="text-danger"></span>
                </div>

                <div class="form-group mb-4 text-center">
                    <input type="submit" value="Crear" class="btn btn-primary btn-lg" />
                </div>

            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">Volver a la Lista</a>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f8f9fa;
        overflow: hidden; /* Desactiva la barra de desplazamiento */
        height: 100vh; /* Asegura que el body ocupe toda la altura de la pantalla */
    }

    h1 {
        font-family: 'Arial', sans-serif;
    }

    .container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    .alert {
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }
</style>
